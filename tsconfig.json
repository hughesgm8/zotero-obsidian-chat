{
	"compilerOptions": {
		"baseUrl": "src",
		"target": "ES6",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ES6", "DOM", "ES2015.Promise"],
		"strict": true,
		"strictNullChecks": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"sourceMap": true,
		"declaration": false,
		"noEmit": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
